.cube-wrap {
  margin: 150px auto;
  width: 300px;
  height: 300px;
  perspective: 1000px;
  position: relative;
}

.cube-wrap .cube {
  width: 100%;
  height: 100%;
  position: absolute;
  transform-style: preserve-3d;
  transition: all 0.5s ease;
}

.cube-wrap .cube .cube-face {
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
  border: 1px solid #ccc;
}

.cube-wrap .cube .cube-face img {
  width: 100%;
  height: 100%;
}

.cube-face.front {
  transform: translateZ(150px);
}

.cube-face.back {
  transform: rotateX(180deg) translateZ(150px);
}

.cube-face.left {
  transform: rotateY(-90deg) translateZ(150px);
}

.cube-face.right {
  transform: rotateY(90deg) translateZ(150px);
}

.cube-face.top {
  transform: rotateX(90deg) translateZ(150px);
}

.cube-face.bottom {
  transform: rotateX(-90deg) translateZ(150px);
}

.cube-wrap .cube {
  animation: spin 10s linear infinite;
}

@keyframes spin {
  from {
    transform: rotateX(45deg) rotateY(45deg);
  }

  to {
    transform: rotateX(405deg) rotateY(765deg);
  }
}

.cube-container {
  width: 600px;
  height: 600px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -300px;
  margin-left: -300px;
  transition: all 0.5s ease;
  transform: scale(0.25);
}

.cube-container:hover {
  transform: scale(1);
}

.cube-container:hover .cube-wrap .cube {
  animation: entrance 0.5s ease;
}

@keyframes entrance {
  from {
    transform: rotateX(-225deg) rotateY(-225deg);
  }
}

/* left and right arrow */
.arrows span {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fafafa;
  border-radius: 50%;
  cursor: pointer;
  display: none;
  width: 40px;
  height: 40px;
  opacity: 0.15;
  transition: opacity 0.5s ease;
  z-index: 5;
}

.cube-container:hover .next-arrow, .cube-container:hover .pre-arrow {
  display: block;
}

.arrows .pre-arrow {
  left: 25px;
}

.arrows .next-arrow {
  right: 25px;
}

.arrows span::before {
  border-bottom: 4px solid #111;
  border-right: 4px solid #111;
  content: '';
  display: block;
  height: 25%;
  left: 50%;
  position: absolute;
  top: 50%;
  width: 25%;
  transform: translate(-70%, -50%) rotate(-45deg);
}

.arrows .pre-arrow::before {
  transform: translate(-40%, -50%) rotate(135deg);
}

/* dots */
.indicators {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 30px;
  padding: 20px;
  text-align: center;
  opacity: 0;
  transition: opacity 0.3s;
}

.cube-container:hover .indicators {
  opacity: 1;
}

.indicators .indicator {
  background-color: #fafafa;
  border-radius: 50%;
  cursor: pointer;
  display: inline-block;
  width: 14px;
  height: 14px;
  margin: 6px;
  opacity: 0.15;
}

.indicators .indicator.active {
  opacity: 1;
  background-color: #fff;
}

/* rotate class */
.cube.rotate1 {
  transform: translateZ(-150px);
}

.cube.rotate2 {
  transform: translateZ(-150px) rotateX(-180deg);
}

.cube.rotate3 {
  transform: translateZ(-150px) rotateY(90deg);
}

.cube.rotate4 {
  transform: translateZ(-150px) rotateY(-90deg);
}

.cube.rotate5 {
  transform: translateZ(-150px) rotateX(-90deg);
}

.cube.rotate6 {
  transform: translateZ(-150px) rotateX(90deg);
}
